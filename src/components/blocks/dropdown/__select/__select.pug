mixin dropdown-select(options)

  -
    const { select,
            corners,
            doubleSelect,
            width_266} = options;

    setCorners = ' dropdown__select_border_with_sharp_corners';
    setWidth266 = ' dropdown__select_width_266';
    classOfSelect = '';
    classOfSelect = corners ? classOfSelect.concat(setCorners) : classOfSelect;
    classOfSelect = width_266 ? classOfSelect.concat(setWidth266) : classOfSelect;

  if (doubleSelect)
    .dropdown__select.dropdown__select_double
      .dropdown__select.first-select(class=classOfSelect)
        if (Array.isArray(select))
          input(type='text' readonly placeholder=select[0]) 
        else
          input(type='text' readonly placeholder=select)
        span.expand.material-icons expand_more
      .dropdown__select.second-select(class=classOfSelect)
        if (Array.isArray(select))
          input(type='text' readonly placeholder=select[1])
        else
          input(type='text' readonly placeholder=select)
        span.expand.material-icons expand_more
  else
    .dropdown__select(class=classOfSelect)
      input(type='text' readonly placeholder=select) 
      span.expand.material-icons expand_more
